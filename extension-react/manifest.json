{
  "manifest_version": 3,
  "name": "HealthyUI Chrome Extension",
  "description": "Chrome Extension for the HealthyUI app with React and Webpack",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "webNavigation",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  }
}
